<%- include('./partials/header') %>

<% if(success.length > 0) { %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 bg-blue-500 text-white p-4 rounded-lg shadow-lg">
        <span><%= success %></span>
    </div>
<% } %>

<div class="min-h-screen flex flex-col bg-gradient-to-br from-teal-100 to-teal-300">
    <div class="container mx-auto px-10 py-20 flex flex-grow">
        <div class="w-1/4 flex flex-col items-start bg-white p-6 rounded-lg shadow-lg">
            <div class="flex flex-col gap-4">
                <a class="block w-fit mb-2 text-teal-700 font-semibold hover:underline" href="">All Products</a>
                <a class="block w-fit mb-2 text-teal-700 font-semibold hover:underline" href="">Create new product</a>
            </div>
        </div>
        <main class="w-3/4 bg-white p-8 shadow-lg rounded-lg ml-4">
            <h2 class="text-xl font-bold mb-4">Create New Product</h2>
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-2">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium">Product Image</label>
                        <input name="image" type="file" class="py-2 px-4 border rounded w-full">
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <input name="name" type="text" placeholder="Product Name"
                            class="border p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-teal-300">
                        <input name="price" type="text" placeholder="Product Price"
                            class="border p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-teal-300">
                        <input name="discount" type="text" placeholder="Discount Price"
                            class="border p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-teal-300">
                    </div>
                </div>

                <div>
                    <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <input name="bgcolor" type="text" placeholder="Background Color"
                            class="border p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-teal-300">
                        <input name="panelcolor" type="text" placeholder="Panel Color"
                            class="border p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-teal-300">
                        <input name="textcolor" type="text" placeholder="Text Color"
                            class="border p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-teal-300">
                    </div>
                </div>
                <input class="px-5 py-2 rounded mt-3 bg-teal-500 text-white font-semibold cursor-pointer hover:bg-teal-600 transition"
                    type="submit" value="Create New Product">
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
